// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },

  {
    "context": "Outline",
    "bindings": {
      "escape": "outline::Toggle"
      // "ctl+j": "outline::Next",
      // "ctl+k": "outline::Previous"
    }
  },

  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "space F": "file_finder::Toggle",
      "space S": "workspace::NewSearch",

      "space o": "outline::Toggle",

      // toggles
      "space t l": "workspace::ToggleLeftDock",
      "space t r": "workspace::ToggleRightDock",

      // focus
      "space f t": "project_panel::ToggleFocus",
      "space f o": "outline_panel::ToggleFocus",
      "space f g": "git_panel::ToggleFocus"
    }
  }
]
